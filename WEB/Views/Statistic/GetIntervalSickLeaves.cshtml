@model IEnumerable<WEB.ViewModels.SickLeaveViewModel>

@{
    ViewBag.Title = "Лікарняні";
}

<h2>Лікарняні</h2>

<div>
    <a href="@Url.Action("Index", "Home")">Назад</a>

    @if (Model.Any())
    {
        <table>
            <tr>
                <th>Прізвище</th>
                <th>Ім'я'</th>
                <th>Початок</th>
                <th>Кінець</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Employee.LastName</td>
                    <td>@item.Employee.FirstName</td>
                    <td>@item.Start</td>
                    <td>@item.End</td>
                </tr>
            }

        </table>
    }
    else
    {
        <p>Список порожній</p>
    }
</div>